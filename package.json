{
  "name": "@gemini-wallet/core",
  "version": "1.0.0",
  "description": "Core SDK for Gemini Wallet integration with popup communication",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/gemini/gemini-wallet-core"
  },
  "homepage": "https://github.com/gemini/gemini-wallet-core",
  "bugs": {
    "url": "https://github.com/gemini/gemini-wallet-core/issues"
  },
  "license": "MIT",
  "author": "Gemini",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@metamask/rpc-errors": "7.0.2",
    "eventemitter3": "5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "tsup": "^8.4.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "viem": ">=2.0.0"
  },
  "keywords": [
    "gemini",
    "wallet",
    "sdk",
    "ethereum",
    "web3",
    "crypto"
  ]
}